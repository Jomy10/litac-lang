                assert(array.element == 32)

                var list2: List = &array2
                list2.add(8)
                assert(list2.size() == 8)
                assert(array2.element == 32)

                var linked = LinkedList {
                    .len = 0
                }
                var ll: List = &linked
                ll.add(16)
                assert(ll.size() == 16)
            `,
        },


