{
    "description": "Single",
    "disabled": false,
    "includeTypeInfos": true,
    "program": `
        @include("assert.h");
        @foreign func assert(e:bool):void;

        %definitions%

        func main(len:i32, args:**char):i32 {
            %code%
        }
    `,
    "tests": [
        {
            "name": "Offset of packed struct",
            "buildCmd": "clang %input% -o %output% -D_CRT_SECURE_NO_WARNINGS",
            "disabled": true,
            "definitions": `
                import "std/libc"

                @packed
                struct Sprite {
                    a: i32
                    b: i64
                    c: i8
                    d: i8
                }

            `,
            "code": `
                printf("Sizeof(i32) == %zu\n", sizeof(:i32))
                var A = offsetof(Sprite, a);
                printf("A = %zu\n", A)
                var B = offsetof(Sprite, b);
                printf("B = %zu\n", B)
                var C = offsetof(Sprite, c);
                printf("C = %zu\n", C)
                var D = offsetof(Sprite, d);
                printf("D = %zu\n", D)

                assert(A == 0)
                assert(B == 4)
                assert(C == 12)
                assert(D == 13)
            `,
            "output":
`Sizeof(i32) == 4
A = 0
B = 4
C = 12
D = 13
`
        },
        {
            "name" : "Invalid Func Param Syntax Error",
            "definitions": `
                //func something(array: [NOT_VALID]char)
                func hello(x: *const char) {

                }
            `,
            "code": `
                hello("hi"\n)
            `,
            "error": "Unexpected token: '\\' - Missing )"
        },
    ]
}